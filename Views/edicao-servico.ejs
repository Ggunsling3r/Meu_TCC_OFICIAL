<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edição de serviço</title>

    <link rel="shortcut icon" type="imagex/png" href="/wallpaper/so.ico">


    <style>




#ar1{
        width: 25%;
        height: 500px;
        background-color: white;
        float: left;
        margin-left: 0%;
      }

      #ar2{
        width: 50%;
        height: 200px;
        background-color: white;
        float: left;
      }

      #ar3{
        width: 25%;
        height: 500px;
        background-color: white;
        float: right;
      }

      #c{
        background-color: #A71752;
      }

      #la1{
        font-size: 30px;
      }



      #btnlog{
        background-color: darkred;
        border-color: white;
      }

      #btnlog:hover{
        background-color: green;
      }

     

      

      




    </style>


</head>



<body>



    
    <%- include('layout/amenu'); %>

   

    
    <article id="ar1">
        <br>
        <br>
        <br><br><br><br>
        <center>
        <img id="im1" src="https://static.wixstatic.com/media/b8c75c_94105ac98dd64bf68d1d47124ac08443~mv2.gif" alt="erro na imagem" width="375px"> 
        </center>
        <br>
        <br>
      </article>

      <article id="ar2">


        <br>
        <br>
        
        <center>
        <h1 id="he">Edição dos dados do serviço</h1>
        </center>
        <br>
        <br>

        <div class="card" id="c">
          <div class="container">
            <div class="card container" id="cc">
              <br><br>

              <% dadosservico.forEach(function(dados) { %>
              
              <form enctype="multipart/form-data" action="/fazedicaos/<%=dados.id %>" method="POST">
                
          
                 

                <div class="mb-3">
                <label for="nome"  id="la1" class="form-label"><i class="material-icons">badge</i>Nome do serviço</label>
                <input type="text" style="border-color: #A71752;" class="form-control" required placeholder="Nome" value= "<%=dados.nome %>"  id="nome" name="nome">
                </div>


                <div class="mb-3">
                <label for="tempo"  id="la1" class="form-label"><i class="material-icons">schedule</i>tempo de duração do serviço</label>
                <select id="tempo" name="tempo"  class="form-select" style="width: 300px; border-color: #A71752; " >
                  <option disabled selected id="o"></option>
                  <option id="o" value="15" <%= (dados.tempo ==="15") ? "selected": ""%> > 15 minutos</option>
                  <option id="o" value="30" <%= (dados.tempo ==="30") ? "selected": ""%>>30 minutos</option>
                  <option id="o" value="60" <%= (dados.tempo ==="60") ? "selected": ""%>>1 hora</option>
                  <option id="o" value="90" <%= (dados.tempo ==="90") ? "selected": ""%>>1 hora e 30 minutos</option>
                  <option id="o" value="120" <%= (dados.tempo ==="120") ? "selected": ""%>>2 horas</option>
                  <option id="o" value="150" <%= (dados.tempo ==="150") ? "selected": ""%>>2 horas e 30 minutos</option>
                  <option id="o" value="180" <%= (dados.tempo ==="180") ? "selected": ""%>>3 horas</option>
                </select>
                </div>

                
                <div class="mb-3">
                <label for="preco" id="la1" class="form-label"><i class="material-icons">paid</i>Preço</label>
                <input type="number" style="border-color: #A71752;" step="0.01" required value= "<%=dados.preco %>" placeholder="Preço do serviço" class="form-control"  name="preco" id="preco">
                </div>


                <div class="mb-3">
                <label for="imagem"  id="la1" class="form-label"><i class="material-icons">image</i>Foto do serviço</label>
                <input type="file" style="border-color: #A71752;" value= "/imagesSer/<%=dados.imagem %>" class="form-control"  id="imagem" name="imagem" >
                </div>
               
                    <br><br>
                    <center>
                  <button id="btnlog" type="submit" class="btn btn-primary">Atualizar dados</button>
                    </center>
                    <br><br>
                    <%  }) %>
              </form>
        

            </div>
        </div>
    </div>


      </article>

      <article id="ar3">
        <br>
        <br>
        <br><br><br><br>
        <center>
        <img id="im2" src="https://static.wixstatic.com/media/b8c75c_94105ac98dd64bf68d1d47124ac08443~mv2.gif" alt="erro na imagem" width="375px">
        </center>
        <br>
        <br>
      </article>
    

      <br>
    <br>
    <br>
